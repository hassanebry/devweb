{% extends 'base.html.twig' %}

{% block body %}
    <div class="form-group">
        <div class="col-sm-10">
            <h1>Cr√©ation d'annonce d'un trajet :</h1>

            {{ form_start(form) }}
            
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.villeD, { 'label': 'Dou partez vous?' }) }}
                </div>
                <div class="col-md-6">
                    {{form_row(form.villeA, { 'label': 'Ou allez vous?' })}}
                </div>
            </div>

            <div class="row">
                <div class="col-md-5">
                    {{ form_row(form.dateD) }}
                </div>
                <div class="col-md-7">
                    {{form_row(form.heureD)}}
                </div>
            </div>

            <div class="row">
                <div class="col-md-5">
                    {{ form_row(form.dateA) }}
                </div>
                <div class="col-md-7">
                    {{form_row(form.heureA)}}
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    {{ form_row(form.prix) }}
                </div>
                <div class="col-md-4">
                    {{form_row(form.distance)}}
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                        {{form_row(form.place_dispo)}}
                </div>
            </div>
        </div>
        
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Enregistrer</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}