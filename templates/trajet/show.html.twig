{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détails du trajet de <i>{{ trajet.VilleD }}</i> à <i>{{ trajet.VilleA }}</i> le <i>{{ trajet.DateD|date("d/m/Y") }}</i> :</h1>
    <div class="media" style="margin-top: 60px;">
        <div class="media-body">
            <div class="row">
                <div class="col-sm-10">
                    <h3 class="media-heading"><strong>{{ trajet.VilleD }}</strong> <i>({{ trajet.DateD|date("d/m/Y") }})</i></h3>
                </div>

                <div class="col-sm-2">
                    <i class="pull-right">Publié le {{ trajet.DateAjout|date("d/m/Y") }}</i>
                </div>
            </div>

            <p>
                <strong>{{ trajet.VilleD }}</strong>
                <small> - <i>{{ trajet.VilleA }}</i></small>
            </p>

            <p>{{ trajet.DateD|date("d/m/Y") }}</p>

            <p>
                <strong>Heure de depart :</strong> {{ trajet.HeureD|date("h:i:s") }}
            </p>
            <p>
                <strong>Heure d'arrivée :</strong> {{ trajet.HeureA|date("h:i:s") }}
            </p>
			<p>
                <strong>Prix :</strong> {{ trajet.prix }}
            </p>
			
            
            <div class="row">
                <div class="col-sm-12 text-right">
                    <a class="btn btn-default" href="/trajet">
                        <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
                        Liste des trajets
                    </a>

                    <a class="btn btn-primary" href="#">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Éditer
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}